{
  "compilerOptions": {
    "target": "ES6",
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "types": ["node", "bcrypt", "jsonwebtoken"] 
  },
  "include": ["src/**/*"]
}